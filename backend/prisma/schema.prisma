generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Task {
  id        Int      @id @default(autoincrement())
  title     String
  done      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Destination {
  id          Int     @id @default(autoincrement())
  country     String
  city        String
  description String?
  tours       Tour[]
}

model Tour {
  id            Int         @id @default(autoincrement())
  destination   Destination @relation(fields: [destinationId], references: [id])
  destinationId Int
  title         String
  description   String?
  price         Float
  seatsTotal    Int
  seatsBooked   Int         @default(0)
  category      String      @default("Allgemein") // Sommerreisen, Familienreisen, Abenteuerreisen, Flitterwochen, Inlandsreisen, Auslandsreisen
  imageUrl      String?
  featured      Boolean     @default(false)
  duration      Int         @default(7) // Tage
  included      String?     // JSON string für inkludierte Leistungen
  createdAt     DateTime    @default(now())
  bookings      Booking[]
}

model BlogPost {
  id          Int      @id @default(autoincrement())
  title       String
  content     String
  excerpt     String?
  imageUrl    String?
  author      String   @default("Reisebüro Team")
  category    String   @default("Reisetipps") // Reisetipps, Destinationen, Kultur
  publishedAt DateTime @default(now())
  createdAt   DateTime @default(now())
}

model ContactInquiry {
  id          Int      @id @default(autoincrement())
  name        String
  email       String
  message     String
  destination String?
  travelDate  String?
  persons     Int?
  createdAt   DateTime @default(now())
}

model Booking {
  id        Int      @id @default(autoincrement())
  tour      Tour     @relation(fields: [tourId], references: [id])
  tourId    Int
  name      String
  email     String
  seats     Int
  createdAt DateTime @default(now())
}

// ============================================
// NEW MODELS FOR TRAVELDREAMS EXTENSION
// ============================================

model CarRental {
  id            Int          @id @default(autoincrement())
  name          String
  type          String       // SUV, Sedan, Compact, Luxury
  transmission  String       // Automatic, Manual
  fuel          String       // Petrol, Diesel, Electric, Hybrid
  pricePerDay   Float
  seats         Int
  imageUrl      String?
  features      String?      // JSON array
  available     Boolean      @default(true)
  createdAt     DateTime     @default(now())
  bookings      CarBooking[]
}

model CarBooking {
  id            Int       @id @default(autoincrement())
  car           CarRental @relation(fields: [carId], references: [id])
  carId         Int
  customerName  String
  customerEmail String
  startDate     DateTime
  endDate       DateTime
  totalPrice    Float
  createdAt     DateTime  @default(now())
}

model TravelAlert {
  id          Int      @id @default(autoincrement())
  country     String   @unique
  safetyLevel String   // safe, moderate, dangerous
  riskScore   Int      // 1-10
  description String
  warnings    String?  // JSON array
  lastUpdated DateTime @default(now())
  imageUrl    String?
}

model Adventure {
  id           Int      @id @default(autoincrement())
  name         String
  location     String
  country      String
  difficulty   String   // Easy, Moderate, Challenging, Expert
  elevation    Int?     // meters
  duration     String   // e.g., "5-7 days"
  bestSeason   String   // e.g., "April-October"
  equipment    String?  // JSON array
  tips         String?
  description  String
  imageUrl     String?
  routeProfile String?  // JSON for elevation profile
  createdAt    DateTime @default(now())
}

model TripPlan {
  id          Int      @id @default(autoincrement())
  destination String
  country     String
  budget      Float
  duration    Int      // days
  month       String
  travelType  String   // Adventure, Relaxation, Culture, Beach, City
  totalCost   Float
  itinerary   String   // JSON
  activities  String   // JSON
  safetyLevel String
  weather     String   // JSON
  imageUrl    String?
  createdAt   DateTime @default(now())
}

model DestinationData {
  id              Int    @id @default(autoincrement())
  country         String @unique
  avgDailyCost    Float
  safetyLevel     String
  bestMonths      String // JSON
  activities      String // JSON
  transport       String // JSON
  hotelPriceRange String
  touristLevel    String // Low, Medium, High
  pros            String // JSON
  cons            String // JSON
  imageUrl        String?
}